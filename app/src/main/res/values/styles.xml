<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_dark
        </item>

        <item name="actionMenuTextColor" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_dark
        </item>

        <item name="android:textColorSecondary" tools:ignore="PrivateResource">
            @color/abc_primary_text_material_dark
        </item>
    </style>

</resources>
